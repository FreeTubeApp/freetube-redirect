{

  "manifest_version": 2,
  "name": "Freetube Redirect",
  "version": "0.2",

  "description": "Redirects YouTube links to FreeTube.",

  "icons": {
    "48": "icons/iconColor.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/*",
    "*://*.youtube-nocookie.com/*",
    "*://*.youtu.be/*",
    "*://*.hooktube.com/*"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  }

}
